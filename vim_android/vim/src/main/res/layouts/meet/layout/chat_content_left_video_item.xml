<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/left_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/black999"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_image_personal" />

        <LinearLayout
            android:layout_marginLeft="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textColor="@color/black666"
                android:textSize="15sp"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/left_content_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/left_content_video_image"
                    android:layout_width="150dp"
                    android:background="@drawable/shipin_bg"
                    android:layout_height="100dp" />
                <ProgressBar
                    android:id="@+id/chat_download_file"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/left_content_video_play"
                    android:layout_width="wrap_content"
                    android:src="@drawable/bt_luxiang"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>