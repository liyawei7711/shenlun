<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/ll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_btn_account"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/view1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your phone number"
                android:layout_marginTop="58dp"
                android:textColor="#ff128c7f"
                android:textSize="21sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:text="WhatsApp will send an SMS message to verify"
                android:textColor="#ff333333"
                android:textSize="15sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="your phone number."
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Whatâ€™s my number?"
                    android:textColor="#379CCF"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="China"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ff060606"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/whatsapp_xiala"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tv_title"
                    android:layout_height="0.5dp"
                    android:background="#ff008079"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+        86    "
                        android:textColor="#ff000000"
                        android:textSize="16sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#ff008079"
                        android:layout_marginTop="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/ll_1"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="phone number"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textColorHint="#ff8e8e8e"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#ff008079"
                        android:layout_marginTop="10dp"
                        />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Carrier SMS charges may aply"
                android:textColor="#ff666666"
                android:textSize="15sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_pwd"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/view2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Password"
                android:layout_marginTop="58dp"
                android:textColor="#ff128c7f"
                android:textSize="21sp"
                />

            <TextView
                android:id="@+id/tv_back"
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrong number?"
                android:textColor="#ff379ccf"
                android:textSize="15sp"
                />

            <LinearLayout
                android:layout_width="180dp"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="--- --- ---    --- --- --- "
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#ff000000"
                    android:textColorHint="#ff8e8e8e"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ff008079"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter 6-digit code"
                android:layout_marginTop="13dp"
                android:textColor="#ff666666"
                android:textSize="14sp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginRight="37dp"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="27dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/whatsapp_xinxi"
                    />
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend SMS"
                    android:textColor="#ff686868"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="1:50"
                    android:textColor="#ff686868"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="24dp"
                android:background="#ffdfdfdf"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginRight="37dp"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="27dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/whatsapp_dianhua"
                    />
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call me"
                    android:textColor="#ff686868"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="0:50"
                    android:textColor="#ff686868"
                    android:textSize="15sp"
                    />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="30dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_green_board"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ProgressBar
            android:id="@+id/view_load"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/spinner_loading_ring"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/config_server"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_alignBottom="@id/ll_login"
        android:layout_toLeftOf="@id/ll_login"
        android:gravity="center"
        android:text="@string/config_server"
        android:textColor="#ff333333"
        android:textSize="14sp" />

</RelativeLayout>