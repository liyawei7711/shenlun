<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_white_concer"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="25.5dp"
            android:layout_marginLeft="25.5dp"
            android:layout_marginRight="25.5dp"
            android:text="@string/notice"
            android:textSize="17sp"
            android:textColor="@color/black333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/notice_txt_1"
                android:ellipsize="end"
                android:textColor="@color/black333"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/app_name"
                android:ellipsize="end"
                android:textColor="@color/black333"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/blackccc"
            android:layout_marginTop="15dp"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:text="返回"
                android:textColor="@color/black333"
                android:textSize="17dp" />

            <View
                android:id="@+id/divider"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/blackccc" />

            <TextView
                android:id="@+id/tv_liuxia"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="留下"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/color_55A2FD"
                android:textSize="17dp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>