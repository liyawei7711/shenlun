<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="23dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/whatsapp_photo" />

        <RadioGroup
            android:id="@+id/rg_menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:orientation="horizontal">

            <huaiye.com.vim.common.views.AppRadioButton
                android:id="@+id/rbtn_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="CHATS"
                android:textColor="@color/selector_main_textcolor"
                android:textSize="16sp"
                app:unReadCircleRadius="8.5dp"
                app:unReadCircleRightOffset="25dp"
                app:unReadCircleTopOffset="1.5dp"
                app:unReadTextSize="10dp" />

            <huaiye.com.vim.common.views.AppRadioButton
                android:id="@+id/rbtn_settings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="STATUS"
                android:textColor="@color/selector_main_textcolor"
                android:textSize="16sp"
                app:unReadCircleRadius="8.5dp"
                app:unReadCircleRightOffset="25dp"
                app:unReadCircleTopOffset="1.5dp"
                app:unReadTextSize="10dp" />

            <huaiye.com.vim.common.views.AppRadioButton
                android:id="@+id/rbtn_contacts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="CALLS"
                android:textColor="@color/selector_main_textcolor"
                android:textSize="16sp"
                app:unReadCircleRadius="8.5dp"
                app:unReadCircleRightOffset="25dp"
                app:unReadCircleTopOffset="1.5dp"
                app:unReadTextSize="10dp" />

        </RadioGroup>

    </LinearLayout>

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="5dp"
        app:cardCornerRadius="0dp"
        app:cardUseCompatPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="chats" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="chats"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="chats"
                    android:visibility="invisible" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>