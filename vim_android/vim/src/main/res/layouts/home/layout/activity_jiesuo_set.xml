<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#484956"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_notic"
        android:textSize="28sp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:visibility="gone"
        android:text="@string/label_txt57"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_all1"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/blue_white_point"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_marginLeft="12dp"
                android:layout_height="12dp"
                android:src="@drawable/blue_white_point"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_marginLeft="12dp"
                android:layout_height="12dp"
                android:src="@drawable/blue_white_point"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_all2"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/blue_white_point"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/blue_white_point"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/blue_white_point"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_all3"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/blue_white_point"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/blue_white_point"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/blue_white_point"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_gongneng"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/common_notice13"
            android:textColor="#ff55a2fd"
            android:textSize="16sp"
            />
    </LinearLayout>

    <huaiye.com.vim.views.GestureLockViewGroup
        android:id="@+id/id_gestureLockViewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#484956"
        android:gravity="center_vertical"
        zhy:count="3"
        zhy:tryTimes="5" />

    <LinearLayout
        android:id="@+id/ll_reset"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_txt56"
            android:textColor="#ff55a2fd"
            android:textSize="14sp"
            />
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/mima_jiantou"
            android:layout_marginLeft="5dp"
            android:textColor="#ff55a2fd"
            android:textSize="14sp"
            />
    </LinearLayout>

</LinearLayout>