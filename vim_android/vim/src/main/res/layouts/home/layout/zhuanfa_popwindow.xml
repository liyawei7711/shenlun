<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_white_concer"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="25.5dp"
            android:layout_marginLeft="25.5dp"
            android:layout_marginRight="25.5dp"
            android:text="@string/label_txt71"
            android:textSize="17sp"
            android:textColor="@color/black333" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25.5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25.5dp"
            android:layout_height="55dp">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_user" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_head"
                android:text=""
                android:textColor="@color/black333"
                android:textSize="16sp" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_common"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="25.5dp"
                android:visibility="gone"
                android:padding="10dp"
                android:layout_marginRight="25.5dp"
                android:layout_marginTop="17dp"
                android:background="#f2f2f2"
                android:textColor="@color/black999"
                />

            <ImageView
                android:id="@+id/iv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_user" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:background="@drawable/board_black_board"
            android:layout_marginLeft="25.5dp"
            android:layout_marginRight="25.5dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black333"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="17dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_content_share"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:textColor="@color/black999"
                    />

                <ImageView
                    android:id="@+id/iv_content_share"
                    android:layout_marginLeft="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_image_default" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1px"
                android:text="来自"
                android:visibility="gone"
                android:background="@color/color_F2F2F2"
                android:textColor="@color/black999"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/blackccc"
            android:layout_marginTop="15dp"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:text="@string/cancel"
                android:textColor="@color/black333"
                android:textSize="17dp" />

            <View
                android:id="@+id/divider"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/blackccc" />

            <TextView
                android:id="@+id/tv_send"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/send"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/color_55A2FD"
                android:textSize="17dp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>