<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="9dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="162dp"
        android:orientation="vertical"
        android:background="@drawable/shape_white_concer"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/home_popwindow_bt1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="21dp"
            android:gravity="center_vertical"
            android:text="Group chat"
            android:textColor="@color/black333" />

        <TextView
            android:id="@+id/home_popwindow_bt2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="21dp"
            android:gravity="center_vertical"
            android:text="Push video"
            android:textColor="@color/black333" />

        <TextView
            android:id="@+id/home_popwindow_bt3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="21dp"
            android:gravity="center_vertical"
            android:text="Video meeting"
            android:textColor="@color/black333" />

        <TextView
            android:id="@+id/home_popwindow_null"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="21dp"
            android:gravity="center_vertical"
            android:text="Status privacy"
            android:visibility="gone"
            android:textColor="@color/black333" />

        <TextView
            android:id="@+id/home_popwindow_bt4"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="21dp"
            android:gravity="center_vertical"
            android:text="Setting"
            android:textColor="@color/black333" />

    </LinearLayout>



</FrameLayout>