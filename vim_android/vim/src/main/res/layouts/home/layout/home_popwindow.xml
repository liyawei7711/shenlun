<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="9dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="162dp"
        android:orientation="vertical"
        android:background="@drawable/home_popwindow_bg"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/home_popwindow_bt1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="21dp"
            android:drawableLeft="@drawable/tankuang_qunliao"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:text="@string/home_popwindow_btn1"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:background="@color/color_595A63"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/home_popwindow_bt2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="21dp"

            android:drawableLeft="@drawable/tankuag_shipintuisong"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:text="@string/home_popwindow_btn2"
            android:textColor="@color/white" />
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:background="@color/color_595A63"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/home_popwindow_bt3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="21dp"
            android:drawableLeft="@drawable/tankuag_shipinhuiyi"

            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:text="@string/home_popwindow_btn3"
            android:textColor="@color/white" />
    </LinearLayout>



</FrameLayout>