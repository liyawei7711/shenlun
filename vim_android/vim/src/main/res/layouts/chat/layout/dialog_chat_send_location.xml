<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black333"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_black_board"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_chat_send_location_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/selector_chat_send_location_btn_bg"
            android:minHeight="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/dialog_chat_send_location_current"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EAEAEA"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dialog_chat_send_location_always"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/selector_chat_send_location_btn_bg"
            android:minHeight="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/dialog_chat_send_location_always"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>