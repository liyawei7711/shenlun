<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/group_announcement"
        android:gravity="center_vertical"
        android:paddingTop="18dp"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/modify_group_announcement"
        android:layout_width="match_parent"
        android:maxLength="200"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/modify_group_announcement_group_owner_lin"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="28dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" android:background="@color/color_EAEAEA"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/modify_group_announcement_group_owner_tip"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" android:background="@color/color_EAEAEA"/>

    </LinearLayout>


</LinearLayout>