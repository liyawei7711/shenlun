<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_history_bg"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15.5dp">

            <ImageView
                android:id="@+id/left_Image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_image_personal"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/view_point"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/shape_red_circle"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:visibility="gone" />
        </FrameLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text=""
                android:textColor="@color/black333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_name"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/whatsapp_wancheng"
                android:text=""
                android:textColor="@color/black999"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15.5dp">

            <ImageView
                android:id="@+id/message_history_miandarao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_alignRight="@+id/time"
                android:layout_marginTop="8dp"
                android:src="@drawable/miandarao" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="12sp"
                android:text="" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_root"
        android:layout_marginLeft="15.5dp"
        android:background="@color/back_gray" />

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/ll_root"
        android:paddingBottom="15dp"
        android:text="Tap and hold on a chat for more options."
        android:textStyle="bold"
        android:textColor="#ff666666"
        android:textSize="14sp"
        />

</RelativeLayout>