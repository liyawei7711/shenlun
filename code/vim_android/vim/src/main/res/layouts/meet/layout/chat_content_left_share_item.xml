<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/left_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="13sp"
        android:textColor="@color/black999"
        android:text="xxxx"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_image_personal"/>

        <LinearLayout
            android:id="@+id/left_content_all"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:visibility="gone"
                android:textColor="@color/black666"
                android:text="xxxx"/>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/chat_box_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/left_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black333"
                    tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>

                <TextView
                    android:id="@+id/left_content_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/blue_278CF8"
                    tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>