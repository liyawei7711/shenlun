<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/left_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="xxxx"
        android:textColor="@color/black999"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_image_personal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="xxxx"
                android:textColor="@color/black666"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/left_content_voice_lin"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:background="@drawable/chat_box_white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/left_content_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/anim_chat_voice_gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="60dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/left_content_voice_state"
                android:layout_width="8dp"
                android:background="@drawable/shape_red_circle_new"
                android:layout_height="8dp" />

            <TextView
                android:layout_marginTop="18dp"
                android:id="@+id/left_content_voice_time"
                android:layout_width="wrap_content"
                android:textColor="#999999"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textSize="12sp"
                android:text="12''"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>