<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/right_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="13sp"
        android:textColor="@color/black999"
        android:text="xxxx"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/default_image_personal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/chat_head"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/right_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:visibility="gone"
                android:textColor="@color/black666"
                android:text="xxxx"/>

            <LinearLayout
                android:id="@+id/right_content_yuehoujifeng_lin"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_marginRight="14dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/right_yuehoujifeng_look"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="2dp"
                    android:textSize="10sp"
                    android:textColor="@color/color_B1B1B1"
                    android:text="@string/string_name_click_2_see"
                    android:layout_height="wrap_content" />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/right_yuehoujifeng_img"
                        android:layout_width="107dp"
                        android:background="@drawable/yuehoujifen_weichakan"
                        android:layout_height="90dp" />
                    <ProgressBar
                        android:id="@+id/chat_download_pgb"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_height="wrap_content" />
                </FrameLayout>



            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>