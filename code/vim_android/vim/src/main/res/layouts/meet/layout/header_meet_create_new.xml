<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/meet_name_title"
        android:textColor="@color/black666"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/create_meet_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:hint="@string/meet_name_hint"
        android:maxLength="25"
        android:textColor="@color/black333"
        android:textColorHint="@color/blackddd"
        android:textSize="16sp" />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/blackddd" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/meet_detail"
        android:textColor="@color/black666"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/create_meet_detail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:hint="@string/meet_detail_hint"
        android:maxLength="30"
        android:textColor="@color/black333"
        android:textColorHint="@color/blackddd"
        android:textSize="16sp" />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/blackddd" />-->

    <LinearLayout
        android:id="@+id/create_meet_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meet_time"
            android:textColor="@color/black666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/create_meet_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:hint="@string/meet_time_hint"
            android:inputType="number"
            android:textColor="@color/black333"
            android:textColorHint="@color/blackddd"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/blackddd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_meet_duration_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meet_duration"
            android:textColor="@color/black666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/create_meet_duration"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/meet_time_duration"
            android:textColor="@color/black333"
            android:textColorHint="@color/blackddd"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/blackddd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_meet_add_person"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_blue_corner_4"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/common_add"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/add_meet_people"
            android:textColor="@color/blue_004CF9"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>