<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/vs_4_avg_tv_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/blue_board">

            <CheckBox
                android:id="@+id/vs_4_avg_cb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_margin="10dp"
                android:button="@drawable/selector_check_uncheck_red"
                android:layout_gravity="right" />
            <TextView
                android:id="@+id/vs_4_avg_name_1"
                android:textColor="@color/black333"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vs_4_avg_tv_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/blue_board">

            <CheckBox
                android:id="@+id/vs_4_avg_cb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_margin="10dp"
                android:button="@drawable/selector_check_uncheck_red"
                android:layout_gravity="right" />
            <TextView
                android:id="@+id/vs_4_avg_name_2"
                android:textColor="@color/black333"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/vs_4_avg_tv_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/blue_board">

            <CheckBox
                android:id="@+id/vs_4_avg_cb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_margin="10dp"
                android:button="@drawable/selector_check_uncheck_red"
                android:layout_gravity="right" />
            <TextView
                android:id="@+id/vs_4_avg_name_3"
                android:textColor="@color/black333"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vs_4_avg_tv_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/blue_board">

            <CheckBox
                android:id="@+id/vs_4_avg_cb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_margin="10dp"
                android:button="@drawable/selector_check_uncheck_red"
                android:layout_gravity="right" />
            <TextView
                android:id="@+id/vs_4_avg_name_4"
                android:textColor="@color/black333"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>