<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <huaiye.com.vim.common.views.CustomerWebView
        android:id="@+id/wv_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_tool"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_draw_tool"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/shape_draw_tool_all"
            android:src="@drawable/baibanxuanfu"
            android:tag="false"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/ll_tool_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_draw_tool"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:visibility="gone"
            tools:ignore="RtlHardcoded">

            <RadioButton
                android:id="@+id/cb_jiguangbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_jiguangbi"
                android:text="荧光笔"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/cb_gangbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_gangbi"
                android:text="钢笔"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/cb_yanse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:button="@null"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_yanse"
                android:text="颜色"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/cb_xiangpica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:button="@null"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_xiangpica"
                android:text="橡皮擦"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/cb_qingchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:button="@null"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_qingchu"
                android:text="清除"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_yanse_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_tool"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/shape_yanse_all"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:ignore="RtlHardcoded">

        <View
            android:id="@+id/view_red_f34235"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#f34235" />

        <View
            android:id="@+id/view_red_e91e63"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="#e91e63" />

        <View
            android:id="@+id/view_blue_2095f2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="#2095f2" />

        <View
            android:id="@+id/view_green_8ac249"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="#8ac249" />

        <View
            android:id="@+id/view_zise_9c27b0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="#9c27b0" />

        <View
            android:id="@+id/view_yellow_fec006"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="#fec006" />

        <View
            android:id="@+id/view_grey_9e9e9e"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="#9e9e9e" />

        <View
            android:id="@+id/view_black_000000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="#000000" />

    </LinearLayout>

</RelativeLayout>