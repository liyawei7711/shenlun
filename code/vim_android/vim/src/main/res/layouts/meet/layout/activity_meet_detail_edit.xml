<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="14dp"
        android:textColor="@color/black333"
        android:text="@string/meet_name_title"/>

    <EditText
        android:id="@+id/meet_detail_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/blackddd"
        android:hint="@string/meet_name_hint"
        android:textSize="16dp"
        android:textColor="@color/black333"
        android:background="@null"
        android:gravity="center_vertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/blackddd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:textColor="@color/black333"
        android:text="@string/meet_detail"/>

    <EditText
        android:id="@+id/meet_detail_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/blackddd"
        android:hint="@string/meet_detail_hint"
        android:textSize="16dp"
        android:textColor="@color/black333"
        android:background="@null"
        android:gravity="center_vertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/blackddd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:textColor="@color/black333"
        android:text="@string/meet_time"/>

    <TextView
        android:id="@+id/meet_detail_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:textColor="@color/black333"
        android:gravity="center_vertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/blackddd"/>

</LinearLayout>