<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/blue"
        android:scaleType="fitXY"
        android:src="@drawable/meet_top_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/radius_white_solid"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <TextView
                    android:id="@+id/home_meeting_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/huiyi_btn_chuangjianhuiyi"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/black333"
                    android:text="@string/create_meeting"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <TextView
                    android:id="@+id/home_meeting_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/huiyi_btn_yuyuehuiyi"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/black333"
                    android:text="@string/create_order_meeting"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <TextView
                    android:id="@+id/home_meeting_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/huiyi_btn_jiaruhuiyi"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/black333"
                    android:text="@string/join_meeting"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="13dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black333"
            android:text="@string/present_meeting" />
    </LinearLayout>

</FrameLayout>