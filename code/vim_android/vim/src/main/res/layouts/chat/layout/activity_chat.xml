<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_safe"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:src="@drawable/anquanfanghu"
        android:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/message_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/chat_relative"
        android:background="#d5d5d5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_send_img"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:src="@drawable/pic"
                android:text="@string/img"
                android:textColor="#fff"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/btn_send_file"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:src="@drawable/cebianlan_bendiluxiang"
                android:text="@string/notice_file"
                android:textColor="#fff"
                tools:ignore="ContentDescription" />


            <EditText
                android:id="@+id/chat_input_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_black_board"
                android:gravity="center_vertical"
                android:maxLength="1000"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                tools:ignore="LabelFor" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/btn_shape_corners"
                android:text="@string/send"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_expend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>


</LinearLayout>