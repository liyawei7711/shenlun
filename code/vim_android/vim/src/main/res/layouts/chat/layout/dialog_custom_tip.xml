<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_black_board"
        android:orientation="vertical"
        android:padding="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/custom_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="28dp"
            android:paddingBottom="28dp"
            android:gravity="center"
            android:textColor="@color/black333"
            android:minHeight="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible" />

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EAEAEA"
        android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/custom_dialog_left_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/selector_chat_send_location_btn_bg"
                android:minHeight="40dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black333"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:text="@string/cancel"
                android:visibility="visible" />
            <View
                android:layout_width="1dp"
                android:background="@color/color_EAEAEA"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/custom_dialog_right_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_chat_send_location_btn_bg"
                android:minHeight="40dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black333"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:text="@string/makesure"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>