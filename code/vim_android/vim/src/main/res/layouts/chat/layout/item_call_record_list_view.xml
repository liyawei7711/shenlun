<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/meet_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_gradient_call_record"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/meeting_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/join_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingRight="17.5dp"
            android:text="@string/immediate_accession"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/talk_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_header"
            android:layout_width="45dp"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/left_Image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/default_image_personal"
                tools:ignore="ContentDescription" />

            <View
                android:id="@+id/view_point"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/shape_red_circle"
                android:visibility="gone" />
        </FrameLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="fsfjkhskjfhsjfhsj"
                android:textColor="@color/black333"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_name"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/talk_type"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tonghuajilu_laidianyijie" />


                <TextView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="ssssssss"
                    android:textColor="@color/black999"
                    android:textSize="12dp" />
            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black999"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.5dp"
            android:layout_marginRight="17.5dp"
            android:src="@drawable/tonghuajilu_more" />
    </LinearLayout>

    <View
        android:id="@+id/meet_view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/back_gray" />
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:background="@color/back_gray" />
</LinearLayout>