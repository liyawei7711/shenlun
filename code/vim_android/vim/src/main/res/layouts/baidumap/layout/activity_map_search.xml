<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basecolor"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/chat_title_bar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/color_30313C"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/chat_title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:layout_toRightOf="@id/view_left"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/selector_navi_back_white"
            android:text="@string/seach_with_emptyh"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />

    </LinearLayout>
    <LinearLayout
        style="@style/titleStyle"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ams_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/map_bg_shape"
            android:hint="搜索"
            android:padding="7dp"
            android:textColor="@color/app_txt_black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/ams_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="取消"
            android:textColor="@color/app_sub_color"
            android:textSize="15sp" />
    </LinearLayout>

    <View style="@style/Line_H_Drak" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ams_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>